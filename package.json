    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "node": "^12.22.12",
    "pg": "^8.5.1",
    "pg-pool": "^3.5.1",
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
